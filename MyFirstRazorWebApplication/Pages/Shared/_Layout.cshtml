<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFirstRazorWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyFirstRazorWebApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-page="Index" >Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="Klant" >Klanten</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="Locaties" >Locaties</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="SelecteerLocatie" >Selecteer locatie</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="KlantLocatieOverzicht">Klant/locatie overzicht</a>
                </li>
            </ul>      
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        footer
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>