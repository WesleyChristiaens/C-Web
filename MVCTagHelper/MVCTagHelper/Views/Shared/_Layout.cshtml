<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCTagHelper</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCTagHelper.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="bg-primary text-white p-2">
        <span class="navbar-brand ml-2">PXL - MVC TagHelper</span>
    </div>
    <div class="bg-primary row">
        <div class="col-1">
            <a background-color="danger" class="link-danger" asp-controller="Landen" asp-action="Index">Landen</a>
        </div>
        <div class="col-1">
            <a background-color="success" class="link-danger" asp-controller="Locaties" asp-action="Index">Locaties</a>
        </div>
        <div class="col-1">
            <a background-color="warning" class="link-danger" asp-controller="Afdelingen" asp-action="Index">Afdelingen</a>
        </div>        
    </div>
    <div class="row m-1 p-1">
        <div id="TaHelpers" class="col-3">

        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
